<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CadastrarUsuarioController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Cadastrar Usuário" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="14.0" layoutY="46.0" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="60.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Nome:" />
                  <TextField fx:id="txtNome" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Endereço:" />
                  <TextField fx:id="txtEndereco" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Telefone:" />
                  <TextField fx:id="txtTelefone" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Email:" />
                  <TextField fx:id="txtEmail" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btCadastrar" prefWidth="95.0" text="Cadastrar" />
                  <Button mnemonicParsing="false" onAction="#btVoltar" prefWidth="95.0" text="Voltar" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
